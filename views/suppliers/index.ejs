<div class="form-row form-row-end">
    <a class="btn btn-primary" href="/suppliers/new">Add supplier</a>
</div>

<form action="/suppliers" method="GET">
    <div class="form-row form-row-end btn-row">
        <div class="form-item"></div>
        <div class="form-item">
            <input type="text" name="supplier" value="<%= searchOptions.supplier %>">
        </div>
        <div class="form-item">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </div>
</form>

<h2 class="page-header">Suppliers</h2>
<% suppliers.forEach( supplier => { %>
    <div class="category-row category-name">
        <a href="/suppliers/<%= supplier.id %>"><%= supplier.supplier %></a>
    </div>
<% }) %>